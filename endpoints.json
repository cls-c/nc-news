
{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:articleid": {
    "description": "return an article array specified by its articleid",
    "queries": [],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "article_id": "2",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "image_img_url": "wwww.example.image.com"
        }
      ]
    }
  },
  "GET /api/articles/:articleid/comments": {
    "description": "return comments associated to the article array specified by its articleid",
    "queries": [],
    "exampleResponse": {
      "articles": [
        {
          "comment_id": 23,
          "votes": 0,
          "created_at": "2018-05-30T15:59:13.341Z",
          "author": "weegembump",
          "body": "Text from the article..",
          "article_id": "2"
        }
      ]
    }
  },
  "POST /api/articles/:articleid/comments": {
    "description": "update comments associated to the article array specified by its articleid",
    "payload":{"username":"string. username of the comment author", "body":"string, body content for the comment"},
    "queries": [],
    "exampleResponse": {
      "articles": [
        {
          "comment_id": 23,
          "votes": 0,
          "created_at": "2018-05-30T15:59:13.341Z",
          "author": "weegembump",
          "body": "Text from the article..",
          "article_id": "2"
        }
      ]
    }
  }
  
}

